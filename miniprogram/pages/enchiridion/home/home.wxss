page{
  background-color: white;
}
/* 搜索框 */

.page_row {
  display: flex;
  width: 100%;
  height: 150rpx;
  align-items: center;
  justify-content: center;
  background-color: white;
}

.search {
  margin-top: -20rpx;
  display: flex;
  width: 100%;
  height: 100rpx;
  align-items: center;
  justify-content: center;
}

.search_arr {
  border-radius: 60rpx;
  display: flex;
  width: 90%;
  height: 56rpx;
  align-items: center;
  justify-content: center;
  background-color: rgba(231, 237, 253, 0.5);
}

.search_arr input {
  border-radius: 5px;
  width: 100%;
}

.sousuo {
  text-align: center;
  font-size: 24rpx;
}

.searchcion {
  position: absolute;
  margin-left: 80%;
  z-index: 2;
  width: 24rpx;
  height: 24rpx;
}

/* 轮播图 */

.boxcontainerBox {
  background-color: white;
}

.main {
  height: 100%;
  width: 100%;
}

.swiperMain {
  height: 300rpx;
  overflow: hidden;
  box-sizing: border-box;
  margin: 0 32rpx;
  border-radius: 20rpx;
  position: relative;
}

.swiperImg {
  width: 100%;
  height: 100%;
}



.image1 {
  height: 64rpx;
  width: 64rpx;
}

.image2 {
  height: 64rpx;
  width: 48rpx;
}

.text1 {
  font-size: 36rpx;
  font-weight: bold;
  padding-left: 8rpx;
  color: black;
}

.text2 {
  font-size: 32rpx;
  font-family: "宋体";
  color: black;
}

.text3 {
  font-size: 24rpx;
  color: #8a8a8a;
}

.block {
  background-color: #0081ff;
  width: 18rpx;
  height: 18rpx;
}

.box1 {
  background-color: white;
  padding:0 32rpx;
  display: flex;
  align-items: center;
}

.box2 {
  background-color: white;
  padding: 32rpx 32rpx 0 32rpx ;
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  align-items: center;
}

.box3 {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.box4 {
  background-color: white;
  padding: 0 0 32rpx 32rpx;
  display: flex;
  align-items: center;
}

.box5 {
  background-color: white;
  padding: 0 32rpx;
  flex-direction: column;
}
